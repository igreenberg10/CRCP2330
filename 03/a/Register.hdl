/**
 * 16-bit register:
 * If load[t] == 1 then out[t+1] = in[t]
 * else out does not change
 */

CHIP Register {
    IN in[16], load;
    OUT out[16];

    PARTS:
    // Put your code here:
 	Mux(a=r1, b=in[1..16], sel=load, out =o1[1..16]);
    DFF(in=o1[1..16], out=r1, out=out[1..16]);
}
